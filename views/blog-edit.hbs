{{#> layout currentPage='Edit-Blog'}}

    <form id="create-blog" class="create-blog-form" method="post" action="/blog-update/{{index}}?_method=PATCH">
      <h1>Edit Blog</h1>

      <div class="input-group mb-3 mt-3">
        <input name="title" id="title" type="text" placeholder="Title" class="form-control" aria-label="Sizing example input" aria-describedby="title" value="{{blog.title}}" required>
      </div>

      <div class="input-group mb-3">
        <textarea name="content" id="content" placeholder="Content" class="form-control" aria-label="content" rows="6" required>
            {{~blog.content~}}
        </textarea>
      </div>

      <div class="input-group mb-3">
        <input name="image" type="file" class="form-control" id="image">
        <label class="input-group-text" for="image">Upload</label>
      </div>

      <div class="form-field">
        <div class="button-container">
          <button class="active-on" type="submit">Submit</button>
        </div>
      </div>

    </form>

{{/layout}}