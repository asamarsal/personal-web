{{#> layout}}
        <nav class="navbar navbar-expand-lg bg-purple">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="./img/dumbwayslogo.png" alt="logo_dumbways" width="50">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link effecthover others-text" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link effecthover others-text" href="/blog">Blog</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link active" href="/testimonials">Testimonials</a>
                    </li>
                    </ul>
                    <a class="btn btn-orangered" href="/contact">Contact Me</a>
                </div>
            </div>
        </nav>

        <main>
            <h1 class="testimonials-title-1">Testimonials</h1>
            <p class="testimonials-title-2" style="font-size: 20px;">Rating by Stars</p>

            <div class="testimonials-star-buttons">
                <button class="active-two" onclick="showAllTestimonials()">All</button>
                <button class="active-two" onclick="filterTestimonialsByStar(1)">★ 1</button>
                <button class="active-two" onclick="filterTestimonialsByStar(2)">★ 2</button>
                <button class="active-two" onclick="filterTestimonialsByStar(3)">★ 3</button>
                <button class="active-two" onclick="filterTestimonialsByStar(4)">★ 4</button>
                <button class="active-two" onclick="filterTestimonialsByStar(5)">★ 5</button>
            </div>

            <div id="testimonialsContainer" class="testimonials-list">
                <article>
                    <img class="testimonials-img" src="/img/blog-img1.jpg" alt="testimonial1">
                    <p class="testimonials-item-caption">Film yang sangat bagus</p>
                    <p style="text-align: right;">Asa Marsal</p>
                    <p style="text-align: right;">★ 5</p>
                </article>
            </div>

        </main>
{{/layout}}