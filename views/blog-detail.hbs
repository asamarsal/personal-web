{{#> layout currentPage='Blog'}}

    <article class="blog-detail">
        <h1>{{blog.title}}</h1>

        <p>{{formatDateToWIB blog.createdAt}} | {{blog.authorId}}</p>

        <img src="{{blog.image}}" alt="blog-image" style="height: 400px;">
        <p class="mt-2">
            {{blog.content}}
        </p>
    </article>

{{/layout}}