{{#> layout currentPage='Blog'}}

<h1 style="text-align: center; margin-top: 20px;">My Blog</h1>
<div style="width: 90%; margin: 10px auto; text-align: right;">
  <a href="/blog-create" class="blog-post-button active-on">Create</a>
</div>

<main>
    <section id="blogList" class="blog-list">
        <article class="blog-item">
            <div class="blog-item-img">
                <img src="/img/blog-img1.jpg" alt="Blog Image">
            </div>
            <div class="blog-item-text">
                <div>
                    <div class="blog-item-buttons">
                        <button class="blog-edit-button active-ontwo">Edit Blog</button>
                        <button class="blog-post-button active-on">Post Blog</button>
                    </div>
                    <a href="blog-detail" style="text-decoration: none">
                        <h1 class="blog-item-title">Belajar bermain game online</h1>
                    </a>
                    <p>1 Jan 2025 12:34 WIB | Ujang Spakbor</p>
                    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Repudiandae, dolorum.</p>
                </div>
                <p class="blog-item-relative-time">5 days ago</p>
            </div>
        </article>

        {{#each blogs}}
            <article class="blog-item">
            <div class="blog-item-img">
                <img src={{this.image}} alt="Blog Image">
            </div>
            <div class="blog-item-text">
                <div>
                    <div class="blog-item-buttons">
                        <button class="blog-edit-button active-ontwo">Edit Blog</button>
                        <button class="blog-post-button active-on">Post Blog</button>
                    </div>
                    <a href="blog-detail" style="text-decoration: none">
                        <h1 class="blog-item-title">
                            {{this.title}}
                        </h1>
                    </a>
                    <p>{{formatDateToWIB this.postedAt}} | {{this.author}}</p>
                    <p>
                        {{this.content}}
                    </p>
                </div>
                <p class="blog-item-relative-time">{{getRelativeTime this.postedAt}}</p>
            </div>
        </article>
        {{/each}}

    </section>
</main>

{{/layout}}